<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9009688"
    android:orientation="vertical"
    tools:ignore="HardcodedText">


    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_above="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="198dp"
        android:ems="10"
        android:hint="Min.Number"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#8BC34A"
        android:textColorHint="#8BC34A"
        android:textSize="21sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="124dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/button_background"
        android:text="Calculate" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="283dp"
        android:layout_marginBottom="532dp"
        android:background="@drawable/textview_background"

        android:paddingTop="19dp"
        android:text="Provide No Obtained"
        android:textAlignment="center"
        android:textColor="#7B241C "
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="384dp"
        android:layout_toStartOf="@+id/editTextNumber2"
        android:background="@drawable/textview_background"
        android:paddingTop="12dp"

        android:text="@string/PassMarks"
        android:textAlignment="center"
        android:textColor="#7B241C"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:background="#E9009688"
        android:text="Welcome! To German Grade Project"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
        android:textColor="#350401"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextNumber3"
        android:layout_width="401dp"
        android:layout_height="54dp"
        android:layout_alignTop="@+id/button"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:hint="Your German Grade Here"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#8BC34A"
        android:textColorHint="#CDDC39" />

    <EditText
        android:id="@+id/editTextNumberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_alignBottom="@+id/editTextNumber2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="147dp"
        android:layout_marginBottom="158dp"
        android:ems="10"
        android:hint="Obtained"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#8BC34A"
        android:textColorHint="#8BC34A"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/editTextNumberDecimal2"
        android:layout_width="237dp"
        android:layout_height="71dp"
        android:layout_above="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="45dp"
        android:ems="10"
        android:hint="Full Marks"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#8BC34A"
        android:textColorHint="#8BC34A"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="116dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="232dp"
        android:layout_toStartOf="@+id/editTextNumberDecimal2"
        android:background="@drawable/textview_background"
        android:paddingTop="12dp"
        android:text="Enter Total Exam Marks"
        android:textAlignment="center"
        android:textColor="#7B241C"
        android:textStyle="bold" />
</RelativeLayout>